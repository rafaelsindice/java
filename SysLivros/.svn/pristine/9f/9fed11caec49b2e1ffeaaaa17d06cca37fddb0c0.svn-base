    private void btnGerarRelatorioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnGerarRelatorioActionPerformed
        if (!cbRelatorio.getSelectedItem().equals("Selecione um relatório")
                && (!txtDe.getText().equals("  /  /    "))
                && (!txtAte.getText().equals("  /  /    "))) {
            lblAte.setForeground(Color.black);
            
        } else {
            if (cbRelatorio.getSelectedItem().equals("Selecione um relatório")) {
                JOptionPane.showMessageDialog(this, "Preencha o campo \"Selecione um tipo de relatrio\"", "Erro", JOptionPane.ERROR_MESSAGE);
                lblRelatorio.setForeground(Color.red);
            } else {
                lblRelatorio.setForeground(Color.black);
            }
            if (txtDe.getText().equals("  /  /    ")) {
                JOptionPane.showMessageDialog(this, "Preencha o campo \"De\" ", "Erro", JOptionPane.ERROR_MESSAGE);
                lblDe.setForeground(Color.red);
            } else {
                lblDe.setForeground(Color.black);
            }
            if (txtAte.getText().equals("  /  /    ")) {
                JOptionPane.showMessageDialog(this, "Preencha o campo \"Até\"", "Erro", JOptionPane.ERROR_MESSAGE);
                lblAte.setForeground(Color.red);
            } else {
                lblAte.setForeground(Color.black);
            }
        }
    }//GEN-LAST:event_btnGerarRelatorioActionPerformed

