    private void btnAtualizarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAtualizarActionPerformed
      if (JOptionPane.showConfirmDialog(this, "Deseja realmente Atualizar professor", "Atualização de professor", JOptionPane.YES_NO_OPTION) == JOptionPane.YES_OPTION) {
            int idCatis[] = new int[2000];
            int i = 1;
            try {
                PreparedStatement ps = Conexao.ConexaoJDBC.prepareStatement("select * from Catis where idCatis>0");
                ResultSet rs = ps.executeQuery();
                while (rs.next()) {

                    idCatis[i] = rs.getInt("idCatis");

                    i++;
                    System.out.println(idCatis[i]);
                }
                int id = 1;
                id = cbCatis.getSelectedIndex();
                id++;
                String nomeCatisAtualizado = txtCatisAtualizado.getText();
                // PreparedStatement ps = Conexao.ConexaoJDBC.prepareStatement("update professores set nome = ? where idProfessores = ? ");  
                //ps.setString(1,"");
                //  ps.setString(2,id);
                // ps.execute();

                PreparedStatement p = Conexao.ConexaoJDBC.prepareStatement("update Catis set nomeCatis = ? where idCatis = ? ");
                p.setString(1, nomeCatisAtualizado);//valor a ser atualizado
                p.setInt(2, idCatis[id]); //indice onde sera feita a atualização
                p.execute();
                JOptionPane.showMessageDialog(this, "Catis atualizado com sucesso", "Atualização de Catis", JOptionPane.INFORMATION_MESSAGE);
                    new Catis().setVisible(true);
                    this.dispose();
                     } catch (SQLException ex) {
                JOptionPane.showMessageDialog(this, "Erro ao atualizar professor" + ex.getMessage(), "ERRO", JOptionPane.ERROR_MESSAGE);
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(this, "ERRO " + ex.getMessage());
            }

        }
    }//GEN-LAST:event_btnAtualizarActionPerformed

