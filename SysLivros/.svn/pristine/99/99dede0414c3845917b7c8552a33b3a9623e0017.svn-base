    private void btnCadastrarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCadastrarActionPerformed
  if(txtNomeCatis.getText().equals("")){
  JOptionPane.showMessageDialog(this, "Digite o campo \"Nome do catis\"","ERRO",JOptionPane.ERROR_MESSAGE);
    lblNomeCatis.setForeground(Color.red);
  }else{
      String NomeCatis=txtNomeCatis.getText();
            try {  
                PreparedStatement ps =Conexao.ConexaoJDBC.prepareStatement("INSERT INTO Catis VALUES (?,?)");
                ps.setString(1, null);
                ps.setString(2,NomeCatis );
                ps.execute();
                JOptionPane.showMessageDialog(this, "Catis cadastrado com sucesso","Cadastro",JOptionPane.INFORMATION_MESSAGE);
            } catch (SQLException ex) {
                JOptionPane.showMessageDialog(this,"Erro ao cadastrar Catis"+ ex.getMessage(),"ERRO",JOptionPane.ERROR_MESSAGE);
            }
  }
    
    
    }//GEN-LAST:event_btnCadastrarActionPerformed

