    public void consultar() {
        DefaultTableModel model = (DefaultTableModel) table_consulta.getModel();
        model.setRowCount(0);
        String Apostila = (String) cbApostila.getSelectedItem();
       // String Local = (String) cbLocal.getSelectedItem();
        String SQL = "SELECT * FROM historico_base"
                +" WHERE lower(nm_Curso)"
               
                +" LIKE '%"+Apostila.toLowerCase()+"%'";
                
        try {
            Statement stmt = Conexao.ConexaoJDBC.createStatement();

            try {
                try (ResultSet rs = stmt.executeQuery(SQL)) {
                    while (rs.next()) {
                        model.addRow(new Object[]{
                                    rs.getInt("IdHistorico_base"), rs.getString("nm_curso")
                                ,rs.getString("qt_apostila"),rs.getDate("dt_data_Entrada")});
                    }
                }
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(this, "Erro 1"+ex.getMessage());
            }
        } catch (SQLException | HeadlessException ex2) {
            JOptionPane.showMessageDialog(this, "Erro 2"+ex2.getMessage());


        }
        
    }
