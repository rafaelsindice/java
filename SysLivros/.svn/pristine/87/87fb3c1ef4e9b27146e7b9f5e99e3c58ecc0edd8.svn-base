    private void btnVoltarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnVoltarActionPerformed
   new Principal().setVisible(true);
   this.dispose();
    }//GEN-LAST:event_btnVoltarActionPerformed

    private void btnCadastrarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCadastrarActionPerformed
if(!txtApostila.getText().equals("")&&!txtData.getText().equals("  /  /    ")){
JOptionPane.showMessageDialog(this, "Cadastrado com sucesso","cadastro Apostilas",JOptionPane.INFORMATION_MESSAGE);
new Principal().setVisible(true);
this.dispose();
}else{
        if(txtApostila.getText().equals("")){
    JOptionPane.showMessageDialog(this, "Preencha o campo \"Nome\"","Erro",JOptionPane.ERROR_MESSAGE);
lblApostila.setForeground(Color.red);
}else{
lblApostila.setForeground(Color.black);
}if(txtData.getText().equals("  /  /    ")){
    JOptionPane.showMessageDialog(this, "Preencha o campo \"Data de cadastro\"","Erro",JOptionPane.ERROR_MESSAGE);
lblData.setForeground(Color.red);
}else{
lblData.setForeground(Color.black);
}}
    }//GEN-LAST:event_btnCadastrarActionPerformed

    private void btnCadastrarKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_btnCadastrarKeyPressed
      if(evt.getKeyCode()==KeyEvent.VK_ENTER){
      btnCadastrarActionPerformed(null);
      }
    }//GEN-LAST:event_btnCadastrarKeyPressed

    private void btnVoltarKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_btnVoltarKeyPressed
if(evt.getKeyCode()==KeyEvent.VK_ENTER){
btnVoltarActionPerformed(null);
}
    }//GEN-LAST:event_btnVoltarKeyPressed

