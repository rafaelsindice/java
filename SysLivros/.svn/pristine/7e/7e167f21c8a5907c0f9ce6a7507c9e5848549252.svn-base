    private void btnSenhaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSenhaActionPerformed
if((txtNome.getText().equalsIgnoreCase("Rafael")&&(new String(txtSenha.getPassword()).equals("senha")))){
    JOptionPane.showMessageDialog(rootPane,"Sucesso ao logar");
   
    new Principal().setVisible(true);
     
     this.dispose();
}else{
JOptionPane.showMessageDialog(this,"Erro ao logar!","Erro",JOptionPane.ERROR_MESSAGE);
}
    }//GEN-LAST:event_btnSenhaActionPerformed

