    private void formWindowOpened(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowOpened
        try {
            Conexao.conectar("root", "positivo");
        } catch (Exception ex) {
        JOptionPane.showMessageDialog(this, "Erro ao conectar-se ao banco "+ex.getMessage(),"Erro",JOptionPane.ERROR_MESSAGE);
        }
            
        
    }//GEN-LAST:event_formWindowOpened

    private void formWindowClosed(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowClosed
        try {
            Conexao.ConexaoJDBC.close();
        } catch (SQLException ex) {
           JOptionPane.showMessageDialog(this,"Erro ao desconectar o banco"+ ex.getMessage());
        }
    }//GEN-LAST:event_formWindowClosed

